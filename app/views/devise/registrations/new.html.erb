<!-- ERRORS MESSAGES -->
<%= render "devise/shared/error_messages", resource: resource %>

<div class="container">
  <div class="row">
    <div class="col">
      <article class="card-body mx-auto">
        <h2 class="card-title mt-3">Cr√©er mon compte</h2>
        <hr>
        <!-- FORM -->
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          
          <!-- EMAIL -->
          <div class="form-group input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"> <i class="fas fa-at"></i> </span>
            </div>
            <%= f.email_field :email, autofocus: true, class:"form-control", placeholder: "#{I18n.t 'helpers.placeholder.user.email'}", autocomplete: "e-mail" %>
          </div> <!-- form-group// -->

          <!-- PASSWORD -->
          <% if @minimum_password_length %>
            <i class=""><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></i>
          <% end %>
          <div class="form-group input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"> <i class="fas fa-lock"></i> </span>
            </div>
            <%= f.password_field :password, class:"form-control", placeholder: "#{I18n.t 'helpers.placeholder.user.password'}", autocomplete: "new-password" %>
          </div> <!-- form-group// -->
          
          <!-- PASSWORD CONFIRMATION -->
          <div class="form-group input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"> <i class="fas fa-lock"></i> </span>
            </div>
            <%= f.password_field :password_confirmation, class:"form-control", placeholder: "#{I18n.t 'helpers.placeholder.user.password_confirmation'}", autocomplete: "new-password" %>
          </div> <!-- form-group// -->     

          <!-- REMEMBER ME -->
          <% if devise_mapping.rememberable? %>
            <div class="form-group d-flex justify-content-start align-items-baseline">
              <%= f.check_box :remember_me %> <br>
              <%= f.label :remember_me, class:"ml-2" %>
            </div>
          <% end %>

          <!-- VALIDATION BUTTON -->
          <div class="actions">
            <%= f.submit t('.sign_up'), class: "btn btn-primary mb-3" %>
          </div>

          <!-- OTHER LINKS -->
          <%= render "devise/shared/links" %>
        <% end %>
      </article>
    </div>
    <div class="col">
      <div class="mx-auto mt-4">
        <%= image_tag("_page_devise2.jpg", width: 650, class: "") %>
      </div>
    </div>
  </div>
</div>
