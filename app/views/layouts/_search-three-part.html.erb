    <div class="text-center">
      <%= form_with model: @talent, url: search_results_path, local: true, method: :get, multipart: true do |form| %>
        <h5 class="mb-3">Je veux apprendre :</h5>
        <!--parent div to align button with search bar-->
        <div class="row max-width-50 mx-auto">

          <!--first col left for search bar input-->
          <div class="col-10">
            <div class="row card-search p-1">

              <!--nested transparent input 1/3-->
              <div class="col-3 left-border">
                <%= form.collection_select(:category_id, get_categories, :id, :title, {:prompt => 'CatÃ©gorie'}, {class: "custom-select transparent-input"}) %>
              </div>

              <!--nested transparent input 2/3-->
              <div class="col-6 left-border">
                <%= form.text_field :search_keywords, class: "transparent-input", id: "search_keywords", placeholder: "Recherche" %>
              </div>

              <!--nested transparent input 3/3-->
              <div class="col-3">
                <%= form.select :city_name, options_for_select(get_cities_name), {:prompt => 'Ville'}, { class: "custom-select transparent-input"} %>
              </div> 
            </div>
          </div>
          
          <!--first col right for search bar button-->
          <div class="col-2">
            <div class="col-3 text-right p-0 m-0">
              <%= button_tag(type: "submit", class: "btn btn-primary btn-lg") do %>
              Recherche
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

    </div><br>