<%= form_tag search_results_path, method: 'get' do %>
    <div class="container d-flex justify-content-center">
        <div class="col-5">
            <%= text_field_tag :search_keywords, nil, class: "form-control form-control-lg", id: "search_keywords", placeholder: "Recherche un talent" %>
        </div>
        <div class="col-2">
            <%= button_tag(type: "submit", class: "btn btn-primary btn-lg mb-2 d-flex justify-content-center align-items-center") do %>
                <i class="fas fa-search mr-1"></i>Rechercher
            <% end %>
        </div>
    </div>
<% end %>

