<h4>Mon profil</h4>
<div class="card card-custom2 shadow p-3">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-3">
        <div class="avatar-big m-auto">
          <img class="avatar-img rounded-circle" src="https://images.pexels.com/photos/5706424/pexels-photo-5706424.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260" />
        </div>
      </div>
      <div class="col-9">
        <table class="table table-borderless max-width-18 m-auto m-4">
          <tbody>
            <tr>
              <th scope="row">Prénom:</th>
              <td><%=@user.first_name%></td>
            </tr>
            <tr>
              <th scope="col">Nom:</th>
              <td><%=@user.last_name%></td>
            </tr>
            <tr>
              <th scope="col">Adresse e-mail:</th>
              <td><%=@user.email%></td>
            </tr>
            <tr>
              <th scope="col">Téléphone</th>
              <td><%=@user.phone_number%></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>