<div class="container-fluid">
      <div class="row">
        <%= render partial: 'admins/admins/admin_menu' %>

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4"><div class="chartjs-size-monitor" style="position: absolute; inset: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;"><div class="chartjs-size-monitor-expand" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0"></div></div><div class="chartjs-size-monitor-shrink" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:200%;height:200%;left:0; top:0"></div></div></div>
          <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
            <h1 class="h2">Talents</h1>
          </div>

          <h4 class="pb-2 mb-4">Statistiques : </h4>
          <p>  <strong class="text-primary"> <%= @talents.count%></strong class="text-primary"> talents proposés par des mentors !</p>


          <h2 class="mt-5">Talents existants :</h2>
          <div class="table-responsive">
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Titre</th>
                  <th>Mentor</th>
                  <th>Voir</th>
                  <th>Modifier</th>
                  <th>Suprimer</th>
                  <th>Date/heure de création</th>
                  <th>Date/heure de modification</th>
                </tr>
              </thead>
              <tbody>
                <% @talents.each do |talent| %>
                  <tr>
                    <td><%= talent.id%></td>
                    <td><%= talent.title%></td>
                    <td><%= talent.user.first_name + " " + talent.user.last_name %></td>
                    <td><%= link_to "Voir", talent_path(talent), class: "btn btn-outline-primary btn-sm" %></td>
                    <td><%= link_to "Modifier", edit_admins_talent_path(id: talent.id),  class: "btn btn-outline-danger btn-sm" %></td>
                    <td><%= link_to "Supprimer", admins_talent_path(id: talent.id), data: { confirm: "Es-tu sûr de vouloir supprimer le talent ?" }, method: "delete", remote: true, class: "btn btn-outline-danger btn-sm" %></td>
                    <td><%= talent.created_at %></td>
                    <td><%= talent.updated_at %></td>
                  </tr>
                <% end%>
              </tbody>
            </table>
          </div>
        </main>
      </div>
    </div>
